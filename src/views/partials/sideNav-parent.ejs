<aside class="sidebar">

  <div class="sidebar__header">

    <!-- sidebar header icon -->
    <div class="sidebar__header__icon-img">
      <img src="/imgs/lms-icon.png">
    </div>

    <!-- sidebar header text -->
    <div class="sidebar__header__icon-text">
      <span>LMS</span>
      <span>Learning Management System</span>
    </div>

    <!-- sidebar header toggle -->
    <div class="sidebar__header__toggle">
      <i class="fa-solid fa-angle-left"></i>
    </div>
  </div>

  <!-- sidebar body -->
  <div class="sidebar__body">

    <ul class="sidebar__body__menu">
      <!-- sidebar menu label -->
      <span class="sidebar__body__menu__menu-label">General</span>
      <li>

        <a href="/home" class="<%- page_title?.toLowerCase()=='home' ? 'selected' : page_title -%>">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>

      </li>
      <li>
        <a href="/scoreboard" class="<%- page_title?.toLowerCase()=='scoreboard' ? 'selected' : page_title -%>">
          <i class="fas fa-star"></i>
          <span>Scoreboard</span>
        </a>
      </li>
      
      <li class="<%- page_title?.split('.')[0]?.toLowerCase()=='elearning' ? 'highlight' : page_title -%>">
        <a class="sidebar__body__menu__btn sidebar__body__menu__elearning-btn">
          <i class="fa-solid fa-book"></i>
          <span>E-Learning <i class="fa-solid fa-angle-down"></i></span>
        </a>
      </li>

      <ul class="sidebar__body__sub-menu elearning-sub-menu">
        <!-- sidebar side menu outer border -->
        <div class="border">
          <li>
            <a href="/elearning/quizzes" class="<%- page_title?.split('.')[1]?.toLowerCase()=='quizzes' ? 'selected' : page_title -%>">
              <span>Quizzes</span>
            </a>
          </li>
          <li>
            <a href="/elearning/assignments" class="<%- page_title?.split('.')[1]?.toLowerCase()=='assignments' ? 'selected' : page_title -%>">
              <span>Assignments</span>
            </a>
          </li>
          <li>
            <a href="/elearning/materials" class="<%- page_title?.split('.')[1]?.toLowerCase()=='materials' ? 'selected' : page_title -%>">
              <span>Materials</span>
            </a>
          </li>
        </div>
      </ul>

      <li class="<%- page_title?.split('.')[0]?.toLowerCase()=='semester_work' ? 'highlight' : page_title -%>">
        <a class="sidebar__body__menu__btn sidebar__body__menu__semesterwork-btn">
          <i class="fa-solid fa-chart-simple"></i>
          <span>Semester Work <i class="fa-solid fa-angle-down"></i></span>
        </a>
      </li>

      <ul class="sidebar__body__sub-menu semesterwork-sub-menu">
        <div class="border">
          <li>
            <a href="/semester_work/schedule" class="<%- page_title?.split('.')[1]?.toLowerCase()=='schedule' ? 'selected' : page_title -%>">
              <span>Schedule</span>
            </a>
          </li>
          <li>
            <a href="/semester_work/gradesbook" class="<%- page_title?.split('.')[1]?.toLowerCase()=='gradesbook' ? 'selected' : page_title -%>">
              <span>Grades book</span>
            </a>
          </li>
          <li>
            <a href="/semester_work/absence" class="<%- page_title?.split('.')[1]?.toLowerCase()=='absence' ? 'selected' : page_title -%>">
              <span>Absence</span>
            </a>
          </li>
        </div>
      </ul>
    </ul>
  </div>
</aside>